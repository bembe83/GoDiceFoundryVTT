<form autocomplete="off" id="roll_prompt" data-counter={{terms.length}}>
    <div class="dice-roll">
        {{#if roll.options.flavor}}
        	<h2 class="godice-module-flavor">{{roll.options.flavor}}</h2>
        {{else}}
        	<h2 class="godice-module-flavor">Custom Roll</h2>
        {{/if}}
        <div class="godice-module-formula">{{roll._formula}}</div>
    </div>
    <div class="terms">
        {{#each terms as |term i|}}
        <div class="dice-term flexcol" data-term="{{i}}">
            {{#if term.faces}}
                {{#if this.image}}
                            <img src="{{this.image}}" alt="d{{this.faces}}" class="dice-term-image""/>
                        {{else}}
                            <i class="fa-solid {{this.icon}}"></i>
                        {{/if}}
                <p class="dice-term-faces"><b>d{{term.faces}}</b></p>
            {{/if}}
            <input type="number" class="dice-term-input" name="{{term.id}}" min="1" max="{{term.faces}}" step="1" data-term="{{i}}" placeholder ={{this.placeholder}}>
        </div>
        {{/each}}
    </div>
    <div class="dialog-buttons flexrow">
        <button type="submit" class="dialog-button ok default" data-button="ok" id="roll_submit">
            <i class="fas fa-check"></i>
            Submit
        </button>
    </div>
</form>